{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended"],
	"jsRules": {
		"no-unused-expression": true
	},
	"rules": {
		"await-promise": true,
		"ban-comma-operator": true,
		"curly": true,
		"function-constructor": true,
		"member-access": [true],
		"ordered-imports": [false],
		"max-line-length": [true, 150],
		"member-ordering": [true, { "order": "fields-first" }],
		"no-arg": true,
		"no-async-without-await": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": [true, 2],
		"no-console": true, // use @ticketio/trace-lib instead
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-switch-case": true,
		"no-duplicate-super": true,
		"no-dynamic-delete": true,
		"no-empty": [true, "allow-empty-catch"],
		"no-empty-interface": true,
		"no-eval": true,
		"no-for-in-array": true,
		"no-invalid-this": true, // use this only in classes
		"no-magic-numbers": [true, 0, 1, 2, 200, 201, 204, 401, 403, 404], // exclude status codes
		"no-null-keyword": true, // DISCUSS
		"no-object-literal-type-assertion": true,
		"no-promise-as-boolean": true,
		"no-return-await": true,
		"no-shadowed-variable": true,
		"no-sparse-arrays": true,
		"no-string-throw": true,
		"no-var-requires": true,
		"no-submodule-imports": true, // no import {x} from 'package/v1'; DISCUSS
		"no-switch-case-fall-through": true,
		"no-tautology-expression": true,
		"no-this-assignment": true,
		"one-line": [true, "check-catch", "check-else", "check-open-brace","check-whitespace"], // DISCUSS
		"one-variable-per-declaration": true,
		"interface-name": [false],
		"object-literal-key-quotes": [true, "consistent"],
		"object-literal-sort-keys": false,
		"prefer-for-of": true,
		"prefer-method-signature": true,
		"prefer-template": [true, "allow-single-concat"], // DISCUSS
		"prefer-while": true,
		"space-before-function-paren": [true, {
			"named": "never",
			"anonymous": "always",
			"asyncArrow": "always"
		}
		],
		"type-literal-delimiter": true,
		"unnecessary-bind": true,
		"unnecessary-else": true, // DISCUSS
		"variable-name": [true,
			"require-const-for-all-caps",
			"allow-pascal-case",
			"allow-trailing-underscore",
			"ban-keywords"
		],
		"arrow-parens": true,
		"eofline": true,
		"import-spacing": true,
		"indent": [true, "tabs", 4],
		"jsdoc-format": true,
		"no-irregular-whitespace": true,
		"no-trailing-whitespace": true,
		"number-literal-format": true, // discuss
		"quotemark": [true, "single", "avoid-escape"], // discuss
		"semicolon": [true],
		"trailing-comma": [true, {
			"multiline": "always",
			"singleline": "never"
		}],
		"typedef-whitespace": [true, {
			"call-signature": "nospace",
			"index-signature": "nospace",
			"parameter": "nospace",
			"property-declaration": "nospace",
			"variable-declaration": "nospace"
		}, {
			"call-signature": "onespace",
			"index-signature": "onespace",
			"parameter": "onespace",
			"property-declaration": "onespace",
			"variable-declaration": "onespace"
		}],
		"whitespace": [true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-rest-spread",
			"check-type",
			"check-typecast",
			"check-type-operator",
			"check-preblock",
			"check-postbrace"
		]
	},
	"rulesDirectory": []
}
